    {
      "type": "range",
      "id": "card_border_radius",
      "label": "Card rounded corners",
      "min": 0,
      "max": 20,
      "step": 1,
      "unit": "px",
      "default": 5
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Title color"
    },
    {
      "type": "color",
      "id": "card_background_color",
      "label": "Card background color"
    },
    {
      "type": "color",
      "id": "card_text_color",
      "label": "Card text color"
    },
    {
      "type": "checkbox",
      "id": "card_borders",
      "label": "Card borders"
    },
    {
      "type": "color",
      "id": "card_borders_color",
      "label": "Card borders color"
    },
    {
      "type": "color",
      "id": "product_highlight_background",
      "label": "Product highlight background"
    },
    {
      "type": "color",
      "id": "product_highlight_text",
      "label": "Product highlight text"
    },
    {
      "type": "checkbox",
      "id": "spacing",
      "label": "Section spacing"
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "limit": 6,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "select",
          "id": "rating",
          "label": "Star rating",
          "options": [
            {
              "label": "1",
              "value": "1"
            },
            {
              "label": "2",
              "value": "2"
            },
            {
              "label": "3",
              "value": "3"
            },
            {
              "label": "4",
              "value": "4"
            },
            {
              "label": "5",
              "value": "5"
            }
          ],
          "default": "5"
        },
        {
          "type": "textarea",
          "id": "testimonial_text",
          "label": "Testimonial text",
          "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit."
        },
        {
          "type": "text",
          "id": "testimonial_name",
          "label": "Name"
        },
        {
          "type": "product",
          "id": "product_highlight",
          "label": "Product highlight",
          "info": "This should be the product relating to the testimonial."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Testimonials",
      "category": "testimonials"
    }
  ]
}
{% endschema %}
