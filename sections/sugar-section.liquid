<!-- sugar Section -->
<section class='sugar-section'>
  <div class='sugar-container'>
    <div class='sugar-title-image'>
      {% render 'title-sugar-by-cubes' %}
    </div>
    <div class='sugar-box-image'>
      <img src='{{ section.settings.box_image | image_url }}' loading='lazy'>
    </div>
    <div class='benefits-section'>
      <div class='benefits-container'>
        <div class='benefit-item'>
          <i class='benefit-item-icon'>{% render 'icon-cruelty-free' %}</i>
          <p>Vegan & cruelty free</p>
        </div>
        <div class='benefit-item'>
          <i class='benefit-item-icon'>{% render 'icon-leaf' %}</i>
          <p>All natural ingredients</p>
        </div>
        <div class='benefit-item'>
          <i class='benefit-item-icon'>{% render 'icon-gluten-free' %}</i>
          <p>
            Gluten <br>
            free
          </p>
        </div>
      </div>
    </div>
    <div class='target-description'>
      <p>
        Turn any drink into an aphrodisiac! <br>
        Works for <b>men and women</b>, together or alone 🔥
      </p>
    </div>

    <div class='effects-description'>
      <ul>
        <li>
          <b> - Stimuilates blood flow 🌶️</b>
        </li>
        <li>
          <b> - Increase sex drive for up to 3h ⏰</b>
        </li>
        <li>
          <b> - Flavorable and safe to use 😋</b>
        </li>
      </ul>
    </div>
    <div class='shop-now-container'>
      <a href='/collections/all' class='shop-now-button'>shop now</a>
    </div>
  </div>
</section>
<!-- End sugar Section -->
{% schema %}
{
  "name": "Sugar Section",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "image_picker",
      "id": "box_image",
      "label": "Choose Image"
    }
  ]
}
{% endschema %}
