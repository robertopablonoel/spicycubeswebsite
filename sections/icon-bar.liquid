{% comment %}
  Icon Bar Section
{% endcomment %}
<div class='icon-bar'>
  {% for item in section.settings.items %}
    <div class='icon-item'>
      <span class='icon'>{{ item.icon }}</span>
      <h3>{{ item.title }}</h3>
    </div>
  {% endfor %}
</div>

<style>
  .icon-bar {
    display: flex;
    justify-content: center;
    background-color: #f5f0e6;
    padding: 20px;
    text-align: center;
    overflow-x: auto;
  }

  .icon-item {
    flex: 1;
    margin: 0 10px;
    min-width: 50px;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .icon {
    font-size: 24px;
    margin-bottom: 10px;
  }

  h3 {
    font-family: 'Times New Roman', Times, serif;
    font-size: clamp(16px, 4vw, 42px);
    margin: 0;
    max-width: clamp(200px, 30vw, 400px);
    word-wrap: break-word;
  }

  @media (max-width: 768px) {
    .icon-bar {
      padding: 0;
    }
  }
</style>

{% schema %}
{
  "name": "Icon Bar",
  "settings": [
    {
      "type": "list",
      "id": "items",
      "label": "Icon Items",
      "default": [
        {
          "icon": "❤️",
          "title": "Gender inclusive aphrodisiac"
        },
        {
          "icon": "❤️",
          "title": "Boost mood & sensual experience"
        },
        {
          "icon": "❤️",
          "title": "Natural & effective ingredients"
        }
      ],
      "item": {
        "type": "object",
        "properties": {
          "icon": {
            "type": "text",
            "label": "Icon"
          },
          "title": {
            "type": "text",
            "label": "Title"
          }
        }
      }
    }
  ]
}
{% endschema %}
