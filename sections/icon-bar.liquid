<div
  class='icon-bar'
  id='section-{{ section.id }}'
  style='display: flex; align-items: center; justify-content: center; margin: 0 auto; margin-bottom: 15px;'
>
  <div class='page-width' style='gap: clamp({{ section.settings.min_gap }}px, 2vw, 200px);'>
    {% for block in section.blocks %}
      {% assign icon = block.settings.icon %}
      {% assign label = block.settings.title %}
      {% assign emoji_icon = block.settings.emoji_icon %}

      <div class='icon-bar__column'>
        {% if icon %}
          {{ icon | image_url: width: 60 | image_tag: class: 'icon-bar__icon' }}
        {% elsif emoji_icon %}
          <h1 style='margin: 0;'>{{ emoji_icon }}</h1>
        {% else %}
          <div class='icon__img'>
            <div class='placeholder-bg'>
              {% assign placeholder = 'product-' | append: forloop.index %}
              {{ placeholder | placeholder_svg_tag: 'placeholder-img' }}
            </div>
          </div>
        {% endif %}
        {% if label %}
          <p>
            <span class='icon-bar__text'>{{ label }}</span>
          </p>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</div>

{% style %}
  #section-{{ section.id }} {
    {% if section.settings.spacing %}
      margin: 30px auto;
    {% endif %}
  }
{% endstyle %}

{% schema %}
{
  "name": "Icon Bar",
  "settings": [
    {
      "type": "checkbox",
      "id": "spacing",
      "label": "Section spacing"
    },
    {
      "type": "number",
      "id": "min_gap",
      "label": "Min Gap",
      "default": 20
    }
  ],
  "blocks": [
    {
      "type": "icon",
      "name": "Icon",
      "limit": 4,
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "emoji_icon",
          "label": "Emoji Icon"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Icon Label"
        }
      ]
    }
  ]
}
{% endschema %}
