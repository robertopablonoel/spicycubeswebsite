{% comment %}
  Icon Bar Section
{% endcomment %}
<div class='icon-bar-section'>
  <div class='icon-bar'>
    {% if section.blocks.size > 0 %}
      {% for block in section.blocks %}
        <div class='icon-item'>
          <span class='icon'>{{ block.settings.icon }}</span>
          <h3>
            <span class='desktop-title'>{{ block.settings.title }}</span>
            {% if block.settings.mobile_title != blank %}
              <span class='mobile-title'>{{ block.settings.mobile_title }}</span>
            {% endif %}
          </h3>
        </div>
      {% endfor %}
    {% else %}
      <p>No icons available.</p>
    {% endif %}
  </div>
</div>
<style>
  .icon-bar-section {
    margin-top: -1px;
    position: relative;
    z-index: 1000;
    background-color: #faf1e0;
    padding-top: 41px;
  }
  .icon-bar {
    display: flex;
    justify-content: center;
    text-align: center;
  }

  .icon-item {
    flex: 1;
    margin: 0 10px;
    min-width: 100px;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .icon {
    font-size: 24px;
    margin-bottom: 10px;
  }

  h3 {
    font-size: clamp(20px, 4vw, 42px);
    margin: 0;
    max-width: clamp(200px, 30vw, 400px);
    word-wrap: break-word;
    font-family: 'superior-title', serif;
    font-weight: 500;
  }

  .mobile-title {
    display: none;
  }

  @media (max-width: 768px) {
    .icon-bar {
      padding: 0;
    }

    .desktop-title {
      display: none;
    }

    .mobile-title {
      display: block;
    }
  }
</style>

