<div class='promote-brand-section'>
  <div class='page-width'>
    <div class='section-header text-center'>
      <h2>{{ section.settings.heading | escape }}</h2>
      <div class='rte'>
        {{ section.settings.text }}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Promote Brand",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Promote Our Brand"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text",
      "default": "<p>Register to become an affiliate and earn 25% of every sale you refer.</p>"
    }
  ],
  "presets": [
    {
      "name": "Promote Brand",
      "category": "Text"
    }
  ]
}
{% endschema %}

{% stylesheet %}
  .promote-brand-section {
    background-color: #ffffff;
    padding: 10px 0;
  }

  .section-header h2 {
    margin-bottom: 20px;
    font-family: 'superior-title', serif;
    font-weight: 500;
    font-size: 36px;
  }
  .section-header rte {
    font-family: 'Work Sans', sans-serif;
    font-size: 16px;
    font-weight: 400;
  }
{% endstylesheet %}
